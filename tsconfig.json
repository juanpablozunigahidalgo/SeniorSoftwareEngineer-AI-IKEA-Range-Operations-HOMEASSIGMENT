{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",             /* ðŸ‘ˆ Esto arregla el error de los imports */
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    /* ConfiguraciÃ³n para la Base de Datos (TypeORM) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}